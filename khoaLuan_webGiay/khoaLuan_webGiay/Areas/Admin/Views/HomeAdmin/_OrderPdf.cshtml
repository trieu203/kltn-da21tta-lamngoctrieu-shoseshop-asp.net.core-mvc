@model khoaLuan_webGiay.Data.Order
@{
    Layout = null;
    var currency = "VND";
    decimal totalAmount = 0;
    int stt = 1;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hóa đơn - Milion Sneaker</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            font-size: 14px;
            background: #f0f2f5;
            padding: 30px;
            color: #2d3436;
        }

        .invoice-container {
            max-width: 800px;
            margin: auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 40px;
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 20px;
        }

        .shop-logo {
            font-size: 28px;
            color: #e67e22;
            font-weight: 700;
        }

        .subtitle {
            font-size: 14px;
            color: #888;
        }

        .info-table, .item-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .info-table td {
                padding: 8px 10px;
                vertical-align: top;
            }

            .item-table th {
                background: #f6f9fc;
                color: #2d3436;
                padding: 12px;
                text-align: center;
            }

            .item-table td {
                padding: 10px;
                border-bottom: 1px solid #eee;
                text-align: center;
            }

        .total {
            text-align: right;
            margin-top: 30px;
            font-size: 15px;
        }

            .total p {
                margin: 5px 0;
            }

                .total p strong {
                    font-size: 18px;
                    color: #d35400;
                }

        .footer {
            text-align: center;
            margin-top: 40px;
            color: #999;
            font-size: 12px;
        }
    </style>
</head>

<body>
    <div class="invoice-container">
        <div class="header">
            <div class="shop-logo">Milion Sneaker</div>
            <h2>HÓA ĐƠN BÁN HÀNG</h2>
            <p class="subtitle">Ngày lập: @Model.OrderDate?.ToString("dd/MM/yyyy")</p>
        </div>

        <table class="info-table">
            <tr>
                <td><strong>Khách hàng:</strong></td>
                <td>@Model.User?.UserName</td>
            </tr>
            <tr>
                <td><strong>Email:</strong></td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td><strong>SĐT:</strong></td>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <td><strong>Địa chỉ giao hàng:</strong></td>
                <td>@Model.ShippingAddress</td>
            </tr>
            <tr>
                <td><strong>Trạng thái:</strong></td>
                <td>
                    @{
                        string statusVN = Model.OrderStatus switch
                        {
                            "Pending" => "Đang xử lý",
                            "Completed" => "Hoàn thành",
                            "Cancelled" => "Đã hủy",
                            "Confirmed" => "Đã xác nhận",
                            "Shipping" => "Đang giao hàng",
                            "Delivered" => "Đã giao hàng",
                            _ => Model.OrderStatus
                        };
                    }
                    @statusVN
                </td>
            </tr>
        </table>
    
        <table class="item-table">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    decimal discountedPrice = item.Price * (1 - (item.Product?.Discount ?? 0) / 100M);
                    decimal subtotal = discountedPrice * item.Quantity;
                    totalAmount += subtotal;

                    <tr>
                        <td>@stt</td>
                        <td>@item.Product?.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@($"{discountedPrice:N0} {currency}")</td>
                        <td>@($"{subtotal:N0} {currency}")</td>
                    </tr>
                    stt++;
                }

                @{
                    decimal shippingFee = totalAmount <= 5_000_000 ? 50000 : 0;
                    decimal finalTotal = totalAmount + shippingFee;
                }
            </tbody>
        </table>

        <div class="total">
            <p>Tạm tính: @($"{totalAmount:N0} VND")</p>
            <p>Phí vận chuyển: @(shippingFee > 0 ? $"{shippingFee:N0} VND" : "Miễn phí vận chuyển")</p>
            <p><strong>Tổng cộng: @($"{finalTotal:N0} VND")</strong></p>
        </div>

        <div class="footer">
            (*) Đây là hóa đơn tự động, không cần chữ ký. Mọi thắc mắc xin liên hệ bộ phận CSKH Milion Sneaker.
        </div>
    </div>
</body>

</html>
