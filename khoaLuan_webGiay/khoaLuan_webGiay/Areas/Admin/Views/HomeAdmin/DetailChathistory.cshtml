@model khoaLuan_webGiay.Data.ChatHistory
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết lịch sử chat";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Chi tiết lịch sử chat</h1>
    <hr />

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            Thông tin chi tiết
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Tin nhắn:</dt>
                <dd class="col-sm-8" style="white-space: pre-wrap;">@Model.Message</dd>

                <dt class="col-sm-4">Phản hồi:</dt>
                <dd class="col-sm-8" style="white-space: pre-wrap;">
                    @if (string.IsNullOrEmpty(Model.Response))
                    {
                        <span class="text-muted">Không có phản hồi</span>
                    }
                    else
                    {
                        @Model.Response
                    }
                </dd>

                <dt class="col-sm-4">Thời gian gửi:</dt>
                <dd class="col-sm-8">@Model.SentAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                <dt class="col-sm-4">Người dùng:</dt>
                <dd class="col-sm-8">
                    @if (Model.User != null)
                    {
                        @(Model.User.UserName != null ? Model.User.UserName : $"User ID: {Model.User.UserId}")
                    }
                    else
                    {
                        <span class="text-muted">Không xác định</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="DeleteChatHistory" asp-route-id="@Model.ChatId" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Xóa
        </a>
        <a asp-action="Chathistory" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
